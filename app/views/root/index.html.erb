<%- if current_user %>
  <%- if current_user.notifications.unread.count > 0 %>
    <%- current_user.notifications.each do |notification| %>
      <div class="p-2 text-white bg-red-500 rounded-lg my-4">
        <%= notification.message %>
        <%= button_to "閉じる", "/notifications/#{notification.id}", method: :delete, form_class: "inline link" %>
      </div>
    <% end %>
  <% end %>

  <div style=''>
    <%= turbo_frame_tag "my-calendar-events", src: "/calendar_events", loading: :lazy %>
  </div>
<% else %>

  <div class="">
    <%= form_with url: '/auth/google_oauth2', local: true, data: {turbo: false}  do |f| %>
      <%= f.submit '登録/ログイン', class: "btn-primary cursor-pointer" %>
    <% end %>
  </div>

  <p class="mt-2">※ Googleアカウントでログインすることで <a href="/terms" class="link">利用規約</a>と<a href="/privacy" class="link">プライバシーポリシー</a>に同意します</p>
<% end %>
